     <div class="col-md-8 col-sm-8 col-xs-12">

          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <!-- single-blog start -->
              <article class="blog-post-wrapper">
                <div class="post-thumbnail">
               
                  <img src="/upload/{{post.file}}" alt="" />
              
                </div>
             
                <div class="post-information">
             
                  <h2>{{post.title}}</h2>
             
                  <div class="entry-meta">
               
                    <span class="author-meta"><i class="fa fa-user"></i> <a href="#">{{post.user.firstName}}</a></span>
                 
                    <span><i class="fa fa-clock-o"></i> {{generateTime post.date}}</span>
               

               
                    <span><i class="fa fa-comments-o"></i> <a href="#">{{commment_counter}} comments</a></span>
               
                  </div>

                  <div class="entry-content">
  
                 {{#content content=post.content}}
                         {{post.content}}
                 {{/content}}


                  </div>
                </div>
              </article>
              <div class="clear"></div>
              <div class="single-post-comments">
                <div class="comments-area">
                  <div class="comments-heading">
                    <h3>{{commment_counter}} comments</h3>
                  </div>
                  <div class="comments-list">
                    <ul>
                    {{#each post.comments}}
                     {{#if this.status}} 
                    
                        <li class="threaded-comments">
                        <div class="comments-details">
                          <div class="comments-list-img">
                            <img src="/home/img/blog/b02.jpg" alt="post-author">
                          </div>
                          <div class="comments-content-wrap">
                            <span>
																<b>{{user.firstName}}{{user.lastName}}</b>
                               {{!  	<b><a href="#">{{user.firstNameuser.lastName  </a></b>  }} 	
																<span class="post-time">{{generateTime date}}</span>
                        
                            <a href="#">Reply</a>
                       
                            </span>
                       
                            <p>{{comment}}</p>
                       
                          </div>
                        </div>
                      </li>
                     
                     {{/if}}
                  {{/each}}
                    </ul>
                  </div>
                </div>

         {{#if post.allowComments}} 
         {{#if user}}
        
            <div class="comment-respond">
                  <h3 class="comment-reply-title">Leave a comment </h3>
           
                  <form action="/Comment/{{post.slug}}" method="post">
                    <div class="row">
                     
                      <div class="col-lg-12 col-md-12 col-sm-12 comment-form-comment">
                        <p>comment</p>
                        <textarea  name="comment_body" id="message-box" cols="30" rows="10"></textarea>
                        <input type="submit" value="Post Comment" />
                      </div>
                    </div>
                  </form>
                </div>


        {{else}}
          <p> please<a href="/login">login</a> and after that leave your comment </p>
        {{/if}}
         {{/if}}
           
              </div>  
              <!-- single-blog end -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Blog Area -->
  <div class="clearfix"></div>

