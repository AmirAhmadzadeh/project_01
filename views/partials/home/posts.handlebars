  <!-- Start single blog -->
      
      
    
      
    
        <div class="col-md-8 col-sm-8 col-xs-12">
          
         {{#each posts}}
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="single-blog">
                <div class="single-blog-img">
                  <a href="blog-details.html">
											<img src="/upload/{{file}}" alt="">
										</a>
                </div>
                <div class="blog-meta">
                  <span class="comments-type">
											<i class="fa fa-comment-o"></i>
											<a href="#">11 comments</a>
										</span>
                  <span class="date-type">
											<i class="fa fa-calendar"></i>{{generateTime date}}
										</span>
                </div>
                <div class="blog-text">
                  <h4>
											<a href="#">{{title}}</a>
										</h4>
                 {{#content content=content}}
               
                    {{content}}

                 {{/content}}
                </div>
                <span>
										<a href="post/{{id}}" class="ready-btn">Read more</a>
									
                </span>
          
              </div>
           
            {{/each}}
           
            </div>
    
            <!-- End single blog -->




           

            <div class="blog-pagination">
              <ul class="pagination">
                <li><a href="#">&lt;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">&gt;</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Blog Area -->


