  <!-- Start single blog -->
      
      

    
        <div class="col-md-8 col-sm-8 col-xs-12">
        
         {{#each posts}}
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="single-blog">
                <div class="single-blog-img">
                  <a href="blog-details.html">
											<img src="/upload/{{file}}" alt="">
										</a>
                </div>
                <div class="blog-meta">
                  <span class="comments-type">
											<i class="fa fa-comment-o"></i>
											<a href="#"> {{#if this}} {{#cm_counter post=this }} {{/cm_counter}} {{/if}} comments</a>
										</span>
                  <span class="date-type">
											<i class="fa fa-calendar"></i>{{generateTime date}}
										</span>
                </div>
                <div class="blog-text">
                  <h4>
											<a href="#">{{title}}</a>
										</h4>
                 {{#content_summery_posts content=this.content}}  {{/content_summery_posts}}
                 </div>
            
            
                <span>
										<a href="post/{{slug}}" class="ready-btn">Read more</a>
                </span>
          
              </div>
    
            {{/each}}
            </div>
  




            <!-- End single blog -->
            <div class="blog-pagination">
  
  
              <ul class="pagination">
  
  
                  
                 {{#paginate current=current  pages=pages}}{{/paginate}}
               
              
  
  
              </ul>
  
  
  
  
            </div>









          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Blog Area -->


