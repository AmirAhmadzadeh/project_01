


<h1> My Comments </h1>
<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>firstName</th>
            <th>Email</th>
            <th>body</th>
            <th>Date</th>
            <th >Edit</th>
            <th >Delete</th>
    </tr>
    </thead>

     {{#each comments}}
     <tbody>
         <tr>
             <th scope="row">{{_id}}</th>
           
             <td>{{user.firstName}}</td>
             <td>{{user.email}}</td>
             <td>{{comment}}</td>
             <td>{{generateTime date}}</td>
             
             <td >
                 <a class="btn btn-primary" href="/admin/comments/edit/{{_id}}">
                  Edit
                 </a>
             </td>

           <td>
              <form action="/admin/comments/remove/{{_id}}?_method=DELETE" method="post">
                 <input type="submit"  class="btn btn-danger" value="Delete">
              </form>
            </td>  
         
         </tr>
     </tbody>
     {{/each}}
</table>


