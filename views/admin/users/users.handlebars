


<h1>
    users :
</h1>
{{>admin/success_msg}}

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Comments</th>
            <th>status</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>Email</th>
            <th>Date</th>
            <th>delete</th>
            
    </tr>
    </thead>
     {{#each users}}
     <tbody>
         <tr> 

            <th scope="row">{{_id}}</th>
            <td>
                <ul>
                    {{#each this.comments}}
                        <li>{{comment}}</li>

                    {{/each}}

                </ul>

            </td>
            <td>{{status}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
            <td>{{generateTime date}} </td>
          
             {{#deleteBtn statusUser=this.status  user=this}}
            
            {{/deleteBtn}}

         </tr>
     </tbody>
     {{/each}}

     
</table>
